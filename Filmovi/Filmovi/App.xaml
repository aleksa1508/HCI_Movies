<Application x:Class="Filmovi.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Filmovi"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <Style x:Key="txtBox" TargetType="TextBox">
            <Setter Property="Foreground" Value="Black"></Setter>
            <Setter Property="Background" Value="#FFE3E3E3"></Setter>
            <Setter Property="Cursor" Value="IBeam"></Setter>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Height="30" CornerRadius="20" Width="240"  Background="{TemplateBinding Background}"  BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="2">
                            <ScrollViewer x:Name="PART_ContentHost" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15 0 0 0 "/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CenterAlignedTextStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>



        <Style x:Key="sss" TargetType="Hyperlink">
            <Setter Property="Foreground" Value="Black"></Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="Black"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="button_minimize" TargetType="Button">
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="Foreground" Value="Black"></Setter>
            <Setter Property="Cursor" Value="Hand"></Setter>
            <Setter Property="Content" Value="_"></Setter>
            <Setter Property="ToolTip" Value="Minimize"></Setter>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Height="30" CornerRadius="20" Width="30" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#B5C0EF"></Setter>
            <Style.Triggers >
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DADAE5"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="button_close" TargetType="Button">
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="Foreground" Value="Black"></Setter>
            <Setter Property="Cursor" Value="Hand"></Setter>
            <Setter Property="Content" Value="X"></Setter>
            <Setter Property="ToolTip" Value="Close"></Setter>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Height="30" CornerRadius="20" Width="30" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#EF7070"></Setter>
            <Style.Triggers >
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EA2626"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style>


        <Style x:Key="button_log_in" TargetType="Button">
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="Foreground" Value="Black"></Setter>
            <Setter Property="Cursor" Value="Hand"></Setter>
            <Setter Property="Content" Value="_"></Setter>
            <Setter Property="FontSize" Value="15"></Setter>
            
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Height="40" CornerRadius="20" Width="150" Background="{TemplateBinding Background}" BorderThickness="1" BorderBrush="Black">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#FFE9CA2F"></Setter>
            <Style.Triggers >
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFF39B0F"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="data_grid_row_headher" TargetType="DataGridRow">
            <Setter Property="Background" Value="#FFF0C787"/>
            <Setter Property="FontWeight" Value="Bold"></Setter>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridRow">
                        <Border CornerRadius="10" Background="{TemplateBinding Background}">
                            <DataGridCellsPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>



            <Style.Triggers>

                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFEBE4E4"/>
                </Trigger>
            </Style.Triggers>

        </Style>


        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="#FFEB9A9A"/>
        <Setter Property="FontWeight" Value="Bold"></Setter>
        <Setter Property="Height" Value="25"></Setter>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="DataGridColumnHeader">
                    <Border CornerRadius="10" Background="{TemplateBinding Background}" BorderBrush="Black" BorderThickness="0.5">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        </Style>

    </Application.Resources>
</Application>

<Window x:Class="Filmovi.AddMovieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:notifications="clr-namespace:Notification.Wpf.Controls;assembly=Notification.Wpf"
        xmlns:fa5="http://schemas.fontawesome.com/icons/"
        xmlns:local="clr-namespace:Filmovi"
        mc:Ignorable="d"
        Title="AddMovieWindow" 
        AllowsTransparency="True"
        Background="Transparent"
        SizeToContent="WidthAndHeight"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        WindowStyle="None">
    <Canvas Width="600" Height="720">
        <notifications:NotificationArea
         x:Name="WindowNotificationArea"
         Width="400"
         Panel.ZIndex="800"
         MaxItems="3"
         Position="TopCenter"/>
        <Rectangle
     Width="600"
     Height="710"
     Fill="#FF34408F"
     Stroke="DarkGray"
     StrokeThickness="2"
     RadiusX="70"
     RadiusY="70"/>
        <StackPanel 
         Name="MainStackPanel"
         Canvas.Left="15"
         Canvas.Top="15">
            <Grid Margin="220 10 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label Name="LabelMovie" Grid.Column="1" Content="ADD MOVIE" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 0 110 0" Foreground="#FFF1C61F"/>
                <Grid Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Button Name="ButtonMinimize" Grid.Column="0" Margin="0 0 10 0" Style="{StaticResource button_minimize}" Click="ButtonMinimize_Click"></Button>
                    <Button Name="ButtonClose" Grid.Column="1" Margin="0 0 10 0" Style="{StaticResource button_close}" Click="ButtonClose_Click"/>
                </Grid>
            </Grid>

            <Grid Margin="20 20 20 0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Title:" FontSize="20" Foreground="White"/>
                <Label Grid.Row="1" Grid.Column="0" Content="Duration(in minutes):" FontSize="20" Foreground="White"/>
                <Label Grid.Row="2" Grid.Column="0" Content="Image:" FontSize="20" Foreground="White"/>
                <Label Grid.Row="3" Grid.Column="0" Content="Rate:" FontSize="20" Foreground="White"/>
                <Label Grid.Row="4" Grid.Column="0" Content="Description:" FontSize="20" Foreground="White" Margin="0 -5 0 0"/>

                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0 5 0 0">
                    <TextBox  Name="TitleTextBox" Grid.Row="0" Grid.Column="1" Style="{StaticResource txtBox}" ></TextBox>
                    <Label Name="ErrortTitleLabel" Content="" FontWeight="Bold" FontSize="10" Margin="30 5 80 0" Foreground="#FFEBD337"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="1" Margin="0 5 0 0">
                    <TextBox  Name="DurationTextBox" Grid.Row="1" Grid.Column="1" Style="{StaticResource txtBox}"></TextBox>
                    <Label Name="ErrorDurationLabel" Content="" FontWeight="Bold" FontSize="10" Margin="30 5 80 0" Foreground="#FFEBD337"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="1">
                    <StackPanel Orientation="Horizontal">
                        <Image Name="SelectImage"  Width="50" Height="50" Margin="20 0 10 0"/>
                        <Button Name="SearchImage" Content="Search image" ToolTip="Search image" Style="{StaticResource button_log_in}" Width="157" Height="40" HorizontalAlignment="Center"  Click="SearchImage_Click" />
                    </StackPanel>
                    <Label Name="ErrorImageLabel" Content="" FontWeight="Bold" FontSize="10" Margin="70 5 80 0" Foreground="#FFEBD337"/>
                </StackPanel>
                <Label Name="ErrorDescriptionLabel" Content="" Grid.Row="3" Grid.Column="1" FontWeight="Bold" FontSize="10" Margin="30,83,48,240" Foreground="#FFEBD337" Grid.RowSpan="2"/>

                <StackPanel Grid.Row="3" Grid.Column="1" Margin="0 5 0 0">
                    <TextBox  Name="RateTextBox" Grid.Row="1" Grid.Column="1" Style="{StaticResource txtBox}"></TextBox>
                    <Label Name="ErrorRateLabel" Content="" FontWeight="Bold" FontSize="10" Margin="30 5 80 0" Foreground="#FFEBD337"/>
                </StackPanel>
                <DockPanel
    Grid.Row="4" Grid.ColumnSpan="2"
    Width="520"
    Height="240" Margin="0 10 0 0">
                    <ToolBar
        Name="EditorToolBar"
        DockPanel.Dock="Top" Margin="0 25 0 0">
                        <ToggleButton
            Name="BoldToggleButton"
            ToolTip="Bold"
            Command="EditingCommands.ToggleBold">
                            <fa5:SvgAwesome 
                Height="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="Black"
                Icon="Solid_Bold"/>

                        </ToggleButton>
                        <Separator/>
                        <ToggleButton
Name="ItalicToggleButton"
ToolTip="Italic"
           Margin="5 0 0 0"                 
Command="EditingCommands.ToggleItalic">
                            <fa5:SvgAwesome 
    Height="15"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    Foreground="Black"
    Icon="Solid_Italic"/>

                        </ToggleButton>
                        <Separator/>
                        <ToggleButton
Name="UnderlineToggleButton"
ToolTip="Underline"
           Margin="5 0 0 0"                 
Command="EditingCommands.ToggleUnderline">
                            <fa5:SvgAwesome 
    Height="15"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    Foreground="Black"
    Icon="Solid_Underline"/>

                        </ToggleButton>
                        <Separator/>
                        <ComboBox 
            Name="FontFamilyComboBox"
            Width="150"
            IsTextSearchCaseSensitive="False"
            IsTextSearchEnabled="True"
            SelectionChanged="FontFamilyComboBox_SelectionChanged">

                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock
                        MaxWidth="200"
                         Text="{Binding Source}"
                         FontFamily="{Binding Source}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <Separator/>
                        <ComboBox 
    x:Name="FontSizeComboBox"
    Width="60"
    SelectionChanged="FontSizeComboBox_SelectionChanged">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontSize="14" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <Separator/>
                        <ComboBox Name="FontColorComboBox" Width="160" SelectionChanged="FontColorComboBox_SelectionChanged">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="2">
                                        <Rectangle Width="20" Height="20" Fill="{Binding}" Stroke="Black" StrokeThickness="0.5" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding}" VerticalAlignment="Center" />
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>


                    </ToolBar>
                    <StackPanel
        Margin="5"
        DockPanel.Dock="Bottom"
        Orientation="Horizontal">



                    </StackPanel>

                    <RichTextBox
        Name="EditorRichTextBox"
        Width="465"
        Height="127"
        SelectionChanged="EditorRichTextBox_SelectionChanged" 
                       TextChanged="EditorRichTextBox_TextChanged"
                        HorizontalScrollBarVisibility="Auto"
                        VerticalScrollBarVisibility="Auto"
                        ScrollViewer.CanContentScroll="True" />
                </DockPanel>
                <StatusBar Margin="0 200 0 0" Grid.ColumnSpan="2" Grid.Row="4" Height="25" Width="100">
                    <StatusBarItem>
                        <TextBlock Name="WordCountTextBlock" Text="Words: 0" FontWeight="Bold" />
                    </StatusBarItem>
                </StatusBar>

            </Grid>
            <Button Name="ButtonAdd" Style="{StaticResource button_log_in}" Margin="0 15 0 0" Content="ADD" Click="ButtonAdd_Click" ToolTip="ADD"/>
        </StackPanel>
    </Canvas>
</Window>

<Window x:Class="Filmovi.EditMovieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:notifications="clr-namespace:Notification.Wpf.Controls;assembly=Notification.Wpf"
        xmlns:fa5="http://schemas.fontawesome.com/icons/"
        mc:Ignorable="d"
        Title="EditMovieWindow"
        AllowsTransparency="True"
        Background="Transparent"
        SizeToContent="WidthAndHeight"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        WindowStyle="None">
    <Window.Resources>
        <Style x:Key="txtBoxEdit" TargetType="TextBox">
            <Setter Property="Foreground" Value="Black"></Setter>
            <Setter Property="Background" Value="#FFE3E3E3"></Setter>
            <Setter Property="Cursor" Value="IBeam"></Setter>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Height="30" CornerRadius="20" Width="140"  Background="{TemplateBinding Background}"  BorderBrush="{TemplateBinding BorderBrush}"
             BorderThickness="2">
                            <ScrollViewer x:Name="PART_ContentHost" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15 0 0 0 "/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Canvas Width="600" Height="670">
        <notifications:NotificationArea
            x:Name="WindowNotificationArea"
            Width="400"
            Panel.ZIndex="800"
            MaxItems="3"
            Position="TopCenter"/>
        <Rectangle
            Width="600"
            Height="660"
            Fill="#FF34408F"
            Stroke="DarkGray"
            StrokeThickness="2"
            RadiusX="70"
            RadiusY="70"/>
        <StackPanel 
            Name="MainStackPanel"
            Canvas.Left="15"
            Canvas.Top="15">

            <!-- Header -->
            <Grid Margin="200 10 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Content="EDIT MOVIE" FontSize="25" FontWeight="Bold" HorizontalAlignment="Left" Foreground="#FFF1C61F" Grid.ColumnSpan="2" Margin="17,0,0,0"/>
                <Grid Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Name="ButtonMinimize" Style="{StaticResource button_minimize}" Click="ButtonMinimize_Click" Margin="0 0 10 0" Grid.Column="0"/>
                    <Button Name="ButtonClose" Style="{StaticResource button_close}" Click="ButtonClose_Click" Margin="0 0 10 0" Grid.Column="1"/>
                </Grid>
            </Grid>

            <!-- Form -->
            <Grid Margin="20 20 0 0" Width="550">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="240"/>
                </Grid.RowDefinitions>

                <StackPanel  Grid.Row="0" Grid.Column="0" Grid.RowSpan="4">
                <Image Name="ImageMovie" Source="/Slike/orlovi.jpg"  Width="200" Height="170"/>
                <Button Name="SearchImage" Content="Search image" ToolTip="Search image" Style="{StaticResource button_log_in}" Width="157" Height="50" HorizontalAlignment="Center"  Click="SearchImage_Click" />
                    
                </StackPanel>

                <!-- Title -->
                <StackPanel Orientation="Horizontal"  Grid.Row="0" Grid.Column="1" >
                    <Label Content="Title:" FontSize="20" Foreground="White" />
                    <StackPanel>
                        <TextBox Name="TextBoxTitle" Text="Orlovi rano lete" FontSize="18" Style="{StaticResource txtBox}" Margin="0 5 0 0"/>
                        <Label Name="ErrortTitleLabel" Content="" FontWeight="Bold" FontSize="10" Margin="10 5 80 0" Foreground="#FFEBD337"/>
                    </StackPanel>

                </StackPanel>

                <!-- Duration -->
                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                    <Label Content="Duration (min):" FontSize="20" Foreground="White"/>
                    <StackPanel>
                        <TextBox Name="TextBoxDuration" Text="120" FontSize="18" Style="{StaticResource txtBoxEdit}"  Margin="0 5 0 0"/>
                        <Label Name="ErrorDurationLabel" Content="" FontWeight="Bold" FontSize="9" Margin="-10 5 80 0" Foreground="#FFEBD337"/>
                    </StackPanel>

                </StackPanel>

                <!-- Rates -->
                <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1">
                    <Label Content="Rates:" FontSize="20" Foreground="White"/>
                    <StackPanel >
                        <TextBox x:Name="TextBoxRates" Text="10/10" FontSize="18" Style="{StaticResource txtBox}" Margin="0 5 0 0"/>
                        <Label x:Name="ErrorRateLabel" Content="" FontWeight="Bold" FontSize="10" Margin="0 5 80 0" Foreground="#FFEBD337"/>

                    </StackPanel>

                </StackPanel>

                <!-- Date Added -->
                <Label Content="Date Added:" FontSize="20" Foreground="White" VerticalAlignment="Center" Grid.Row="3" Grid.Column="1"/>
                <!--ispraviti i staviti stack panel-->
                <TextBlock Grid.Row="3" Grid.Column="1" Margin="120 6 0 0" Name="TextBlockDateAdded" Text="20.10.2025" Foreground="White" FontSize="20"/>
                <!-- Description Label -->
                <Label Content="Description:" FontSize="20" Foreground="White"  Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center"/>
                <Label Name="ErrorDescriptionLabel" Content="" Grid.Row="4" Grid.Column="1" FontWeight="Bold" FontSize="10" Margin="10 10 0 0" Foreground="#FFEBD337"/>

                <!-- Description Text -->
                <StackPanel
    Grid.Row="5" Grid.ColumnSpan="2"
    Width="490"
    Height="240" Margin="20 -10 0 0">
                    <ToolBar
        Name="EditorToolBar"
        DockPanel.Dock="Top" Margin="0 25 0 0">
                        <ToggleButton
            Name="BoldToggleButton"
            ToolTip="Bold"
            Command="EditingCommands.ToggleBold">
                            <fa5:SvgAwesome 
                Height="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="Black"
                Icon="Solid_Bold"/>

                        </ToggleButton>
                        <Separator/>
                        <ToggleButton
Name="ItalicToggleButton"
ToolTip="Italic"
           Margin="5 0 0 0"                 
Command="EditingCommands.ToggleItalic">
                            <fa5:SvgAwesome 
    Height="15"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    Foreground="Black"
    Icon="Solid_Italic"/>

                        </ToggleButton>
                        <Separator/>
                        <ToggleButton
Name="UnderlineToggleButton"
ToolTip="Underline"
           Margin="5 0 0 0"                 
Command="EditingCommands.ToggleUnderline">
                            <fa5:SvgAwesome 
    Height="15"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    Foreground="Black"
    Icon="Solid_Underline"/>

                        </ToggleButton>
                        <Separator/>
                        <ComboBox 
            Name="FontFamilyComboBox"
            Width="150"
            IsTextSearchCaseSensitive="False"
            IsTextSearchEnabled="True"
            SelectionChanged="FontFamilyComboBox_SelectionChanged">

                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock
                        MaxWidth="200"
                         Text="{Binding Source}"
                         FontFamily="{Binding Source}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <Separator/>
                        <ComboBox 
    x:Name="FontSizeComboBox"
    Width="60"
    SelectionChanged="FontSizeComboBox_SelectionChanged">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontSize="14" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <Separator/>
                        <ComboBox Name="FontColorComboBox" Width="160" SelectionChanged="FontColorComboBox_SelectionChanged">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="2">
                                        <Rectangle Width="20" Height="20" Fill="{Binding}" Stroke="Black" StrokeThickness="0.5" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding}" VerticalAlignment="Center" />
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>


                    </ToolBar>
                    <StackPanel
        Margin="5"
        DockPanel.Dock="Bottom"
        Orientation="Horizontal">



                    </StackPanel>

                    <RichTextBox
        Name="EditorRichTextBox"
        Width="464"
        Height="140"
        SelectionChanged="EditorRichTextBox_SelectionChanged" 
                       TextChanged="EditorRichTextBox_TextChanged"
                        HorizontalScrollBarVisibility="Auto"
VerticalScrollBarVisibility="Auto"
ScrollViewer.CanContentScroll="True"/>
                    <StatusBar Margin="0 10 0 0" Width="100" Height="25" >
                        <StatusBarItem>
                            <TextBlock Name="WordCountTextBlock" Text="Words: 0" FontWeight="Bold" />
                        </StatusBarItem>
                    </StatusBar>
                </StackPanel>



                <!-- Save Button -->
            </Grid>
            <Button Name="ButtonSave" Content="Save" Style="{StaticResource button_log_in}" ToolTip="SAVE" Click="ButtonSave_Click"/>
        </StackPanel>
    </Canvas>
</Window>
